FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install --omit=dev

# Copy source code
COPY . .

# Debug: List all files
RUN find . -name "*.tsx" -o -name "*.ts" | head -20

# Debug: Check if components exist
RUN ls -la components/
RUN ls -la components/ui/

# Build the application
RUN npm run build
